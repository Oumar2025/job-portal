{% extends 'base.html' %}

{% block title %}Job Listings{% endblock %}

{% block content %}
<div class="mb-8">
    <h1 class="text-3xl font-bold mb-4">Find Your Dream Job</h1>

    <!-- Search and Filter Form -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <!-- Search -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Search</label>
                <input type="text" name="search" value="{{ search_query }}"
                    placeholder="Job title, company, location..."
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>

            <!-- Job Type Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Job Type</label>
                <select name="job_type"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All Types</option>
                    {% for key, value in JOB_TYPE_CHOICES %}
                    <option value="{{ key }}" {% if selected_job_type == key %}selected{% endif %}>
                        {{ value }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Category Filter -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                <select name="category"
                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All Categories</option>
                    {% for category in categories %}
                    <option value="{{ category.id }}" {% if selected_category==category.id|stringformat:"s" %}selected{%
                        endif %}>
                        {{ category.name }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Submit Button -->
            <div class="flex items-end">
                <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700">
                    Search
                </button>
                <a href="{% url 'home' %}"
                    class="ml-2 bg-gray-300 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-400">
                    Clear
                </a>
            </div>
        </form>
    </div>

    <p class="text-gray-600">Browse through our latest job openings</p>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
    <div class="md:col-span-3">
        <div class="grid grid-cols-1 gap-6">
            {% for job in page_obj %}
            <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
                <div class="flex justify-between items-start">
                    <div>
                        <h2 class="text-xl font-bold text-blue-600">
                            <a href="{% url 'job_detail' job.id %}">{{ job.title }}</a>
                        </h2>
                        <p class="text-gray-700">{{ job.company }} â€¢ {{ job.location }}</p>
                        <p class="text-gray-600 mt-2">{{ job.description|truncatewords:30 }}</p>
                        <div class="mt-4">
                            <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">
                                {{ job.get_job_type_display }}
                            </span>
                            {% if job.salary %}
                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded ml-2">
                                {{ job.salary }}
                            </span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="text-right">
                        <span class="text-sm text-gray-500">{{ job.created_at|date:"M d, Y" }}</span>
                        <br>
                        <a href="{% url 'job_detail' job.id %}"
                            class="mt-2 inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
            {% empty %}
            <div class="text-center py-12">
                <p class="text-gray-500 text-lg">No jobs found matching your criteria.</p>
            </div>
            {% endfor %}
        </div>

        <!-- Pagination -->
        {% if page_obj.paginator.num_pages > 1 %}
        <div class="mt-8 flex justify-center">
            <nav class="inline-flex rounded-md shadow">
                {% if page_obj.has_previous %}
                <a href="?page={{ page_obj.previous_page_number }}{% if search_query %}&search={{ search_query }}{% endif %}{% if selected_job_type %}&job_type={{ selected_job_type }}{% endif %}{% if selected_category %}&category={{ selected_category }}{% endif %}"
                    class="px-4 py-2 border border-gray-300 rounded-l-md bg-white text-gray-700 hover:bg-gray-50">
                    Previous
                </a>
                {% endif %}

                <span class="px-4 py-2 border-t border-b border-gray-300 bg-white text-gray-700">
                    Page {{ page_obj.number }} of {{ page_obj.paginator.num_pages }}
                </span>

                {% if page_obj.has_next %}
                <a href="?page={{ page_obj.next_page_number }}{% if search_query %}&search={{ search_query }}{% endif %}{% if selected_job_type %}&job_type={{ selected_job_type }}{% endif %}{% if selected_category %}&category={{ selected_category }}{% endif %}"
                    class="px-4 py-2 border border-gray-300 rounded-r-md bg-white text-gray-700 hover:bg-gray-50">
                    Next
                </a>
                {% endif %}
            </nav>
        </div>
        {% endif %}
    </div>

    <div class="md:col-span-1">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="font-bold text-lg mb-4">Job Categories</h3>
            <ul class="space-y-2">
                {% for category in categories %}
                <li>
                    {% with category.id|stringformat:"s" as cat_id_str %}
                    <a href="?category={{ category.id }}{% if search_query %}&search={{ search_query }}{% endif %}{% if selected_job_type %}&job_type={{ selected_job_type }}{% endif %}"
                        class="text-blue-600 hover:text-blue-800 {% if selected_category == cat_id_str %}font-bold{% endif %}">
                        {{ category.name }}
                    </a>
                    {% endwith %}
                </li>
                {% endfor %}
            </ul>

            <div class="mt-8">
                <h3 class="font-bold text-lg mb-4">API Access</h3>
                <p class="text-sm text-gray-600 mb-2">Access jobs via our REST API:</p>
                <code class="text-xs bg-gray-100 p-2 block rounded">GET /api/jobs/</code>
                <p class="text-xs text-gray-500 mt-2">Authentication required for details and application</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
